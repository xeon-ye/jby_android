<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="@dimen/dimen_5"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/home_icon_blue"
        android:gravity="center"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_weight="1"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tv_classes"
                style="@style/middle_black_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="班级" />
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                style="@style/small_gray_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="2019/05/09 10:19" />

            <TextView
                style="@style/small_gray_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="|"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_markingProgress"
                style="@style/small_gray_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="已批阅：0%"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tv_score"
        style="@style/common_tv_custom1_eaeef7"
        android:layout_gravity="center_vertical"
        android:enabled="false"
        android:text="0分" />
</LinearLayout>
