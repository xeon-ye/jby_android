<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:gravity="center">

    <CheckBox
        android:id="@+id/cb_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        style="@style/style_checkbox"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></View>
    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/color_666666"
        android:layout_marginRight="@dimen/dimen_10"
        />
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10"
        >
        <ImageView
            android:id="@+id/iv_down_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/down_success"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <com.hzw.baselib.widgets.RoundProgressBar
            android:id="@+id/rpb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            app:roundProgressColor="@color/color_666EE8"
            app:roundColor="@color/color_F2F2F2"
            app:textIsDisplayable="false"
            />

        <ImageView
            android:id="@+id/iv_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rpb"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:background="@mipmap/down_pause" />

        <ImageView
            android:id="@+id/iv_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignStart="@+id/rpb"
            android:background="@mipmap/down_con"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>