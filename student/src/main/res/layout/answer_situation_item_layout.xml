<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_8"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/tv_num"
            android:layout_marginLeft="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answer"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimen_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确答案"
            android:id="@+id/tv_hint_answer"
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/dimen_15"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_right_answer"
            android:layout_marginLeft="@dimen/dimen_2"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/tv_join_error"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                android:drawablePadding="5dp"
                android:background="@drawable/aw_bg_blue_radius_30"
                android:drawableLeft="@mipmap/situation_error"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="加入错题本"
                />

            <TextView
                android:id="@+id/tv_explain"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                android:drawablePadding="5dp"
                android:background="@drawable/aw_bg_blue_radius_30"
                android:drawableLeft="@mipmap/situation_explain"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="需讲解"
                android:layout_marginLeft="@dimen/dimen_10"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_data_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>