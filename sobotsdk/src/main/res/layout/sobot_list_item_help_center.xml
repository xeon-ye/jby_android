<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sobot_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sobot_item_skill_selector"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/sobot_rl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sobot_bg_help_center_item_selector">

        <com.sobot.chat.widget.SobotImageView
            android:id="@+id/sobot_tv_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sobot_bg_default_pic2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/sobot_tv_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sobot_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0A0A0A"
                android:textSize="14sp"
                tools:text="付费问题" />

            <TextView
                android:id="@+id/sobot_tv_descripe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="在线坐席工单付费" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>