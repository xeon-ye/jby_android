<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/sobot_list_divider_height">

    <TextView
        android:id="@+id/sobot_reminde_time_Text"
        style="@style/sobot_center_remind_time" />

    <LinearLayout
        android:id="@+id/sobot_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/sobot_consult_bg_normal"
        android:orientation="horizontal">

        <com.sobot.chat.widget.BorderImageView
            android:id="@+id/sobot_goods_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sobot_icon_consulting_default_pic"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sobot_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sobot_goods_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sobot_goods_label_text_color"
                android:textSize="12sp" />

            <Button
                android:id="@+id/sobot_goods_sendBtn"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="10dp"
                android:background="@drawable/sobot_goods_info_btn_selector"
                android:text="@string/sobot_button_send"
                android:textColor="@color/sobot_white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>