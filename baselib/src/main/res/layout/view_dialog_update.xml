<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/aw_bg_prompt_dialog">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="发现新版本"
            style="@style/middle_black_style" />


        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="暂不更新"
                    android:textColor="@color/color_666666"
                    android:visibility="gone"
                    style="@style/middle_gray_style" />

                <View
                    style="@style/common_line_vertical"/>

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="立即更新"
                    style="@style/middle_red_style"
                    android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <View
            android:layout_above="@id/ll_button"
            style="@style/common_line_horizontal"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_below="@id/textView10"
            android:layout_above="@id/ll_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/middle_gray_style" />

</RelativeLayout>