<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/item_achievement_child_title_tv"
        android:layout_width="240dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="平均分"
        android:textColor="@color/black_3B3E42"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/contain_line"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        app:layout_constraintStart_toStartOf="@id/item_achievement_child_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_achievement_child_title_tv" />

    <TextView
        android:id="@+id/item_achievement_child_left_tv"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="平均分"
        android:textColor="@color/black_3B3E42"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contain_line" />

    <View
        android:id="@+id/contain_line_vertical"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:background="#e8e8e8"
        app:layout_constraintStart_toEndOf="@id/item_achievement_child_left_tv"
        app:layout_constraintTop_toBottomOf="@id/contain_line" />

    <TextView
        android:id="@+id/item_achievement_child_right_tv"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="排名"
        android:textColor="@color/black_3B3E42"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/contain_line_vertical"
        app:layout_constraintTop_toBottomOf="@id/contain_line" />

    <View
        android:id="@+id/contain_line_right_vertical"
        android:layout_width="1dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/dimen_1"
        android:background="#e8e8e8"
        app:layout_constraintStart_toEndOf="@id/item_achievement_child_title_tv"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>