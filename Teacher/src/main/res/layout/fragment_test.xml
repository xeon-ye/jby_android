<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:orientation="horizontal">

        <com.jkrm.education.widget.CustomProgressView
            android:id="@+id/customProgressView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10">

            <Button
                android:id="@+id/btn_1"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="上传文件到oss" />

            <Button
                android:id="@+id/btn_2"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="添加典型" />

            <Button
                android:id="@+id/btn_3"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="获取某作业某班级的答题进度" />

            <Button
                android:id="@+id/btn_4"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="获取某个作业下某个学生的答题卡批阅进度" />

            <Button
                android:id="@+id/btn_5"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="按人批阅时 --- 获取该作业某学生的题目列表" />

            <Button
                android:id="@+id/btn_6"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="查询某个教师某段时间内的错题情况。默认7天内" />

            <Button
                android:id="@+id/btn_7"
                style="@style/common_btn_single_red"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="查询某个教师某段时间内批阅作业情况。默认昨天凌晨" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
