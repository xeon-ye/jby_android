<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_homeworkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/middle_black_style"
            android:singleLine="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="作业名称"/>

        <!--班级-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:gravity="right"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_className"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/small_gray_style2"
                android:text="班级"/>

            <TextView
                android:id="@+id/tv_submitNotCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/small_gray_style2"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:text="未交"/>
        </LinearLayout>
    </LinearLayout>




        <TextView
            android:id="@+id/tv_studentNames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_3"
            android:paddingRight="@dimen/dimen_3"
            android:gravity="center_vertical"
            style="@style/middle_black_style"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/dimen_20"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:ellipsize="end"
            android:text="名单"/>
</LinearLayout>
