<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_no_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30">

        <EditText
            android:id="@+id/et_phone"
            style="@style/middle_black_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="请输入手机号码" />

        <View style="@style/common_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_verifyCode"
                style="@style/middle_black_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="6"
                android:inputType="number"
                android:hint="请输入验证码" />

            <TextView
                android:id="@+id/tv_sendVerifyCode"
                style="@style/middle_blue_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="发送验证码" />
        </LinearLayout>

        <View style="@style/common_line_horizontal" />

        <Button
            android:id="@+id/btn_next"
            android:layout_marginTop="@dimen/dimen_41"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            style="@style/common_btn_single_shadow_blue"
            android:text="下一步" />
    </LinearLayout>
</LinearLayout>
