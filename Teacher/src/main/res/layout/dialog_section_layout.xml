<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/aw_bg_white_radius_10">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="设置分数段"
        android:textColor="@color/black_3B3E42"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title_tv" />

    <TextView
        android:id="@+id/dialog_score_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="您可以设置分数段："
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@id/dialog_score_tv"
        app:layout_constraintTop_toBottomOf="@id/dialog_title_tv" />

    <EditText
        android:id="@+id/dialog_score_et"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/aw_bg_gray_e8e8e8_radius_10"
        app:layout_constraintStart_toEndOf="@id/dialog_score_hint_tv"
        app:layout_constraintTop_toBottomOf="@id/dialog_title_tv" />

    <TextView
        android:id="@+id/dialog_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="为一个分数段，查看不同分数段的人数分部。"
        android:textColor="@color/black_3B3E42"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_score_et" />

    <View
        android:id="@+id/grade_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_24"
        android:background="@color/color_d8d8d8"
        app:layout_constraintTop_toBottomOf="@id/dialog_hint_tv" />

    <View
        android:id="@+id/grade_dialog_line_01"
        android:layout_width="@dimen/dimen_1"
        android:layout_height="@dimen/dimen_46"
        android:background="@color/color_d8d8d8"
        android:duplicateParentState="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grade_dialog_line" />

    <TextView
        android:id="@+id/dialog_cancel_tv"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_3B3E42"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/grade_dialog_line_01"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grade_dialog_line" />

    <TextView
        android:id="@+id/dialog_sure_tv"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/grade_dialog_line_01"
        app:layout_constraintTop_toBottomOf="@id/grade_dialog_line" />


</android.support.constraint.ConstraintLayout>