<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/middle_black_style"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color_F2F7FA"
            android:drawableLeft="@mipmap/icon_biaolan"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="统计范围" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">

            <TextView
                android:id="@+id/tv_classes"
                style="@style/middle_black_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@null"
                android:drawableRight="@mipmap/global_icon_nest"
                android:gravity="center_vertical"
                android:text="班级" />

            <View style="@style/common_line_horizontal" />

            <TextView
                android:id="@+id/tv_persons"
                style="@style/middle_black_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@null"
                android:drawableRight="@mipmap/global_icon_nest"
                android:gravity="center_vertical"
                android:text="人员" />

            <View style="@style/common_line_horizontal" />
        </LinearLayout>

        <TextView
            style="@style/middle_black_style"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color_F2F7FA"
            android:drawableLeft="@mipmap/icon_biaolan"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="年级均分差" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"/>

        <TextView
            style="@style/middle_black_style"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color_F5F5F5"
            android:drawableLeft="@mipmap/icon_biaolan"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="均分以上人数变化" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"/>

        <TextView
            style="@style/middle_black_style"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color_F2F7FA"
            android:drawableLeft="@mipmap/icon_biaolan"
            android:drawablePadding="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="年级排名变化" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"/>

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/combinedChartRank"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
