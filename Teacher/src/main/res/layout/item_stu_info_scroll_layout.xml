<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/aw_bg_gray_e8e8e8_top_radius_10"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_achievement_name_tv"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android1:gravity="center"
        android:text="姓名"
        android1:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/contain_line"
        android:layout_width="1dp"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/dimen_1"
        android:layout_toRightOf="@id/item_achievement_name_tv"
        android:background="#e8e8e8" />

    <com.jkrm.education.widget.SynScrollerLayout
        android:id="@+id/item_stu_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/contain_line"
        android:focusable="false"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/item_achievement_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_achievement_exam_num_tv"
                android:layout_width="184dp"
                android:layout_height="@dimen/dimen_42"
                android1:gravity="center"
                android:text="考号"
                android1:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="42dp"
                android:background="#e8e8e8" />

            <TextView
                android:id="@+id/item_achievement_num_tv"
                android:layout_width="184dp"
                android:layout_height="@dimen/dimen_42"
                android1:gravity="center"
                android:text="班级"
                android1:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="42dp"
                android:background="#e8e8e8" />

            <TextView
                android:id="@+id/textView_unitType2Name"
                android:layout_width="184dp"
                android:layout_height="@dimen/dimen_42"
                android1:gravity="center"
                android:text="总分"
                android1:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="42dp"
                android:background="#e8e8e8" />


        </LinearLayout>
    </com.jkrm.education.widget.SynScrollerLayout>

</RelativeLayout>